/* miniprogram/pages/list/index.wxss */
page{
 
}

.container.empty {
  background: white;
}

.container:last-child {
  margin-bottom: calc( var(--footer-height) + 24px );
}

.background {
  width: 80vw;
  margin-top: 12vh;
}

.title {
  margin-top: 48px;
  font-size: 17px;
  font-weight: bold;
}

.subtitle {
  margin-top: 9px;
  font-size: 14px;
}

.form-cell {
  padding: 0;
}

.slide {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 2vw;
  position: relative;
}
.slideleft{
  width: 80vw;
  word-break: break-all;
}
.slidetoolicon{
  width: 10vw;
  height: 10vw;
  min-width: 10vw;
  border-radius: 10vw;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.checkbox {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  align-self: flex-start;
  transform: translateY(5px);
}



.star {
  width: 25px;
  height: 36px;
  position: absolute;
  right: 42px;
  top: 0;
}
.starBtn{
  content: "\e614" !important;
  background-color: gold !important;
}
.weui-slideview__btn {
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.file {
  width: 25px;
  height: 25px;
  margin-left: auto;
  margin-right: 22px;
}

.todo-info_title.done {
  text-decoration: line-through;
  color: #8D8D8D;
}

.tianjiabtn{
  height: 20vw;
  width: 20vw;
  font-size: 10vw;
  font-weight: 800;
  justify-content: center;
  display: flex;
  align-items: center;
  text-align: center;

  border-radius: 15vw;
  margin-top: -10vw;
}

.delbtn{
  background-color: red;
  color: white;
}
.slidebtn{
  display: block;
}
.slidebtn::before{
  display: flex;
  height: 100% !important;
  width: 100% !important;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.toolicon{
  font-size: 6vw;margin-right: 2vw;
  align-items: center;display: flex;
}

.topbar{
  position: relative;
  top: 0;
  width: 100vw;
  height: 20vh;
  z-index: 9999;
}
.endbar{
  padding: 2vw 0vw;
  display: flex;
  justify-content: space-around;
  bottom: 0;
  width: 100vw;
  position: fixed;
  z-index: 9999;
}
.midlist{
  margin: 1vw 2.5vw 1vw 2.5vw;
  width: 95vw;
  height: 70vh;
  max-height: 70vh;
  overflow-y: visible;
}





.addmbtn{
  width: 15vw !important;
  height: 15vw !important;
  justify-content: center;
  display: flex;
  text-align: center;
  align-items: center;
  font-size: 8vw;
  border-radius: 10vw;
}

