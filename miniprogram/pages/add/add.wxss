.addform{
  padding: 2.5vw;
  width: 100vw;
}
.addform-group{
  margin: 2vw 0vw;
  width: 95vw;
  border-radius: 2vw;
  background: white;
}
.selectline{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-cell_title {
  margin-bottom: 1vw;
  font-size: medium;
}

.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}

.upload-text {
  margin-left: auto;
  opacity: 0.5;
}

.upload {
  width: 15px;
  height: 15px;
  margin-left: 10px;
}

.option {
  margin-left: 15vw;
}

.selector {
  width: 15px;
  height: 15px;
  margin-left: auto;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.reset {
  background: white;
}

.save {
  color: white;
  background: #353535;
}

.strinput{
  width: 15vw;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 4vw;
  margin: 0vw 1vw;
}

.iconsline{
  display: flex;
  flex-flow:wrap;
  width: 63vw;
  max-width: 63vw;
  justify-content: flex-end;
}